{
  "manifest_version": 2,
  "name": "Jira",
  "description": "Jump straight to Jira directly from address bar shortcuts",
  "version": "3.0.0",
  "omnibox": {
    "keyword": "j"
  },
  "icons": {
    "16": "jira16.png",
    "32": "jira32.png",
    "48": "jira48.png",
    "64": "jira64.png",
    "128": "jira128.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false,
    "chrome_style": false,
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Issues",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "optional_permissions": ["cookies", "storage", "http://*/", "https://*/"],
  "browser_specific_settings": {
    "gecko": {
      "id": "jira@example.com"
    }
  }
}
